@{
    ViewBag.Title = "Register";
}

<h2 class="header-page">SIGN UP</h2>
<div class="header-separator"></div>
<br />
<br />
<br />
<div class="registration-page">
    <a href="@Url.Action("AuthorRegister", "Account")" class="register-block-link left-register-block">
        <div>
            <span>AUTHOR</span>
            <img src="~/Content/images/signup/author.jpg"/>
        </div>
    </a>
    <a href="@Url.Action("InvestorRegister", "Account")" class="register-block-link right-register-block">
        <div>
            <span>INVESTOR</span>
            <img src="~/Content/images/signup/investor.jpg"/>
        </div>
    </a>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
