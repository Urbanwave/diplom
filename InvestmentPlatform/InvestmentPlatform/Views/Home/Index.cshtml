@{
    ViewBag.Title = "Home Page";
}

<div id="myCarousel" class="carousel slide home-page-carousel" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/images/homepage/pic1.jpg">
        </div>

        <div class="item">
            <img src="~/Content/images/homepage/pic2.jpg">
        </div>

        <div class="item">
            <img src="~/Content/images/homepage/pic3.png">
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div>
    <h2 class="header-page">SOLUTIONS</h2>
    <div class="header-separator"></div>
    <br />
    <br />
    <br />
    <div class="home-page-solutions-block">
        @for (int i = 0; i < 3; i++)
        {
            <a href="#">
                <div class="home-page-solutions">
                    <div class="home-page-solutions-image">
                        <img src="~/Content/images/homepage/ny1.jpg">
                    </div>

                    <div class="home-page-solutions-description">
                        <p class="home-page-solution-title">
                            Solution title
                        </p>
                        <p>
                            I'm a paragraph. Click here to add your own text and edit me. It’s easy. Just click “Edit Text” or double click me to add your own content and make changes to the font.
                        </p>
                    </div>
                </div>
            </a>
        }
    </div>
</div>